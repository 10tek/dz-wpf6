<Window x:Class="HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Button x:Name="button" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Height="50" Width="100"/>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
            <CheckBox x:Name="firstCheckBox" Content="CheckBox" />
            <CheckBox x:Name="secondCheckBox" Content="CheckBox" />
        </StackPanel>
        <StackPanel Grid.Row="0" HorizontalAlignment="Center">
            <RadioButton x:Name="firstRBtn" Content="RadioButton" VerticalAlignment="Center"/>
            <RadioButton x:Name="secondRBtn" Content="RadioButton" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
